.recommendSongContainer .header {
  position: relative;
  width: 100%;
  height: 330rpx;
}

.recommendSongContainer .header image {
  width: 100%;
  height: 100%;
}

.recommendSongContainer .header .date {
  position: absolute;
  left: 50%;
  top: 20%;
  transform: translate(0rpx, -5rpx);
  /* width: 300px; */
  color: #FF9156;
  font-size: 85rpx;
  font-weight: 700;
}

/* 列表区域 */
.ListContainer {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;
}

.listHeader {
  height: 80rpx;
  line-height: 80rpx;
}

.listHeader .changeMore {
  float: right;
}

.listScroll {
  height: calc(100vh - 410rpx);
}

.scrollItem {
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}

.scrollItem image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 10rpx;
}

.musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.musicInfo text {
  height: 45rpx;
  line-height: 45rpx;
  font-size: 24rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.scrollItem .iconfont {
  position: absolute;
  right: 0;
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: right;
}